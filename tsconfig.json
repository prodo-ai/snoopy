{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "files": [],
  "references": [
    {"path": "packages/api"},
    {"path": "packages/cli"},
    {"path": "packages/server"},
    {"path": "packages/ui"},
    {"path": "packages/search"}
  ]
}
