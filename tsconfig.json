{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "target": "es2018",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [],
  "references": [
    {"path": "./framework"},
    {"path": "./api/backend-default"},
    {"path": "./api/backend-firebase"},
    {"path": "./api/ui-react"}
  ]
}
