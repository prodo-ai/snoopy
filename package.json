{
  "name": "@prodo-ai/snoopy",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "yarn workspace @prodo-ai/snoopy start",
    "clean": "wsrun --exclude-missing --serial clean",
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "build:prod": "tsc --build tsconfig.prod.json",
    "test": "wsrun --exclude-missing --serial test",
    "lint": "wsrun --exclude-missing --serial lint",
    "postinstall": "patch-package",
    "prelerna:publish": "yarn clean && yarn build:prod",
    "lerna:publish": "lerna publish"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "lerna": "^3.13.4",
    "patch-package": "^6.1.2",
    "postinstall-postinstall": "^2.0.0",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.4.3",
    "wsrun": "^3.6.5"
  }
}
